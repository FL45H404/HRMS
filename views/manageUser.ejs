
    <%-include('./partials/header');%>

    <!-- Optional JavaScript; choose one of the two! -->
    <section class="viewuser">
        <div class="container">
            <div class="heading">
                <h1>Manage user</h1>
            </div>
            <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                    <%for(let i of result){%>
                  <tr>
                    <th scope="row"><%=i.id%></th>
                    <td><%=i.username%></td>
                    <td><%=i.email%></td>
                    <td><%=i.role%></td>
                    <td><button class="btn btn-success"><a href="/manage-user/<%=i.id%>"> <i class="bi bi-pencil"></i> EDIT</a></button> <button class="btn btn-danger"><a href="/delete-user/<%=i.id%>"> <i class="bi bi-trash"></i> DELETE</a></button></td>
                  </tr>
                  <%}%>
                  
                </tbody>
              </table>
        </div>
    </section>

