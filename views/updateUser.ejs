<%-include('./partials/header');%>
<section class="adduser">
<div class="container">
<div class="row">
    <div class="col-6">
        <form method="post" action="/manage-user/<%=result.id%>">
            <div class="form-group row">
                <label for="staticName" class="col-md-4 col-form-label">Username</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="staticName" name="username" value="<%=result.username%>" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-md-4 col-form-label">Email</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="staticEmail" name="email" value="<%=result.email%>" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label" for="inputState">Role</label>
                <div class="col-md-8">
                    <select id="inputState" class="form-control" name="role" value="<%=result.role%>">
                        <option value="user" selected>user</option>
                        <option value="admin" selected>Admin</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Update User</button>

            </div>
        </form>
    </div>
    <div class="col-6">
        <div class="img-content">
            <img src="./public/ECM-Banner-new.png" alt="">
        </div>
    </div>
</div>
</div>
</section>
<%-include('./partials/footer.ejs');%>